<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".insertiondoctor">

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/namedc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your ful name here"
        android:typeface="serif"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/adressdc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your adress here"
        android:typeface="serif"
        android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/phonedc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your phone number here"
        android:inputType="phone"
        android:typeface="serif"
        android:layout_marginBottom="20dp"/>
    android:layout_marginBottom="20dp"/>
    <EditText
        android:id="@+id/speclitedc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your specialty here"
        android:typeface="serif"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select your sex:"
            android:typeface="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"
            android:id="@+id/sex">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="man"
                android:id="@+id/man"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="woman"
                android:layout_marginLeft="20dp"
                android:id="@+id/woman"
                />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="adddoctor"
        android:text="Add a doctor"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="100dp"/>


</LinearLayout>