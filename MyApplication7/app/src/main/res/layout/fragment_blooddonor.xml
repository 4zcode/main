<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".don_sang.Blooddonor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/donateur_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:src="@drawable/user">
    </com.mikhaellopez.circularimageview.CircularImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/user">
            </com.mikhaellopez.circularimageview.CircularImageView>
            <EditText
                 android:layout_width="fill_parent"
                 android:id="@+id/fullname"
                 android:layout_height="70dp"
                 android:hint="First Name"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/user">
            </com.mikhaellopez.circularimageview.CircularImageView>
            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/username_d"
                android:layout_height="70dp"
                android:hint="Second Name"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >


            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/emplacement">
            </com.mikhaellopez.circularimageview.CircularImageView>
            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/location_d"
                android:layout_height="70dp"
                android:hint="Location"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="20dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                />
            <Button
                android:background="@drawable/custom_but"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#DD2525"
                android:textSize="20dp"
                android:id="@+id/minis"
                />
            <TextView
                android:id="@+id/age"
                android:background="@drawable/custom_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="20"
                android:textSize="30dp"
                android:textColor="#000000"
                android:textStyle="bold"
                />
            <Button
                android:background="@drawable/custom_but"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#DD2525"
                android:textSize="20dp"
                android:id="@+id/plus"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/communications">
            </com.mikhaellopez.circularimageview.CircularImageView>
            <EditText
                android:layout_width="fill_parent"
                android:id="@+id/phone_d"
                android:inputType="phone"
                android:layout_height="50dp"
                android:hint="Phone Number"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <CheckBox
                android:id="@+id/ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A+"
                android:textSize="15dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/an"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-"
                android:textSize="15dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/bp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B+"
                android:textSize="15dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/bn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B-"
                android:textSize="15dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
            <CheckBox
                android:id="@+id/op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O+"
                android:textSize="15dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O-"
                android:textSize="15dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/abp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB+"
                android:textSize="15dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                />
            <CheckBox
                android:id="@+id/abn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB-"
                android:textSize="15dp"
                android:textColor="#DD2525"
                android:textStyle="bold"
                />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
    <ProgressBar
        android:id="@+id/progress_bardo"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/buttun"
            android:text="Update"
            android:textColor="@color/cardview_light_background"
            android:textSize="40dp"
            android:id="@+id/adddonateur"/>
    </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>