<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:id="@+id/namelabo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the name of the labo"
        />
    <EditText
        android:id="@+id/placelabo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the place of the labo"
        />
    <EditText
        android:id="@+id/numberlabo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the number of the labo"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:onClick="addlabo"
        />
</LinearLayout>