<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="20dp"
    >
    <LinearLayout
        android:id="@+id/doctor_linear_backgroun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/doctor_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            app:civ_border_color="#6399d5"
            app:civ_border_width="3dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="2dp"
            app:civ_shadow_color="#3f51b5"
            tools:src="@drawable/profile"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name_doctor"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="Akram Bensalem"
                />

            <TextView
                android:id="@+id/place_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                tools:text="Médéa, Médéa"
                android:textColor="?android:textColorSecondary" />
            <TextView
                android:id="@+id/specialite_doctor"
                android:textSize="14dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Pédiatre"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>