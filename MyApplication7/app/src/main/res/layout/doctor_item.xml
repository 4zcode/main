<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/card_margin"
    android:background="?android:selectableItemBackground">

    <LinearLayout
        android:id="@+id/doctor_linear_backgroun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/doctor_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            app:civ_border_color="#6399d5"
            app:civ_border_width="3dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="2dp"
            app:civ_shadow_color="#3f51b5"
            tools:src="@drawable/doctor"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name_doctor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Akram Bensalem"
                />

            <TextView
                android:id="@+id/place_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                tools:text="Médéa, Médéa"
                android:textColor="?android:textColorSecondary" />
            <TextView
                android:id="@+id/specialite_doctor"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Pédiatre"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>