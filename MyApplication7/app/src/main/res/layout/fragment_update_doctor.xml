<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addProfile.AddDoctorFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Ajouter une image de votre cabinet:"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:id="@+id/add_doctor_image"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/doctorm" />
            </androidx.cardview.widget.CardView>
       <!--     <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Le nom de votre cabinet"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
                -->

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/doctor_cabinet_nom"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_person_pin_circle_black_24dp"
                    android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:drawablePadding="8dp"
                    android:hint="Le nom de votre cabinet"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    />
                </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_doctor_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone_in_talk_black_24dp"
                    android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:drawablePadding="8dp"
                    android:hint="Le numéro de téléphone"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    />
            </com.google.android.material.textfield.TextInputLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Votre spécialité :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/doctor_spinner_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_corner"
                android:entries="@array/speciality"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Le numéro d'ordre"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_security_black_24dp"
                    android:tint="@color/colorAccent"/>

                <EditText
                    android:id="@+id/add_doctor_dorde"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Entrer le n° d'ordre"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_verified_user_black_24dp"
                    android:tint="@color/colorAccent"/>

                <EditText
                    android:id="@+id/add_doctor_services"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quelles sont les services que vous offrez"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Status :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/doctor_fragment_radiobottongroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/doctor_type_prive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="Privé"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/doctor_type_publique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Publique"
                    android:layout_marginLeft="32dp"
                    />
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Vos horrairs d'ouvertures :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/doctor_ouverture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:hint="08:00 - 16:00"
                android:textColor="#7d7b7b"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="L'address :"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_pin_circle_black_24dp"
                    android:tint="@color/colorAccent"></ImageButton>

                <EditText
                    android:id="@+id/doctor_location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quartier de votre cabinet"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:singleLine="true" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/doctor_spinner_wilaya"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_corner"
                    android:entries="@array/wilaya"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/doctor_spinner_communs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_corner"
                    android:spinnerMode="dropdown"
                    android:visibility="visible" />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/doctor_progressbar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/add_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mise à jour"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_margin="8dp"/>
</LinearLayout>