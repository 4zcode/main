<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/care" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="25dp"
        android:background="@drawable/cornershaped"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Inscription"
            android:textColor="@color/colorAccent"
            android:textSize="50dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/ic_account_circle_black_24dp"
           android:drawableTint="@color/colorAccent"
            android:drawablePadding="20dp"
            android:hint="Nom Complet"
            android:textColorHint="@color/colorAccent"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp" />

        <EditText
            android:id="@+id/AddressEmail_deux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="10dp"
            android:hint="Address E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/ic_phone_in_talk_black_24dp"
            android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
           android:drawableTint="@color/colorAccent"
            android:drawablePadding="20dp"
            android:hint="Numéro de téléphone"
            android:inputType="phone"
            android:textColorHint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/write_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="20dp"
            android:hint="Mot de Passe"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/confrim_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawableTint="@color/colorAccent"
            android:drawablePadding="20dp"
            android:hint="Confirmer Mot de Passe"
            android:inputType="textPassword"
            android:textColorHint="@color/colorAccent" />


        <Button
            android:id="@+id/sinscrire_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_corner_two"
            android:onClick="login"
            android:padding="10dp"
            android:text="S'inscrire"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous avez déja un compte,"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signin_sinscrire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Se connecter"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
