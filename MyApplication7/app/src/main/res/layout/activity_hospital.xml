<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Hospital.HopitalActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal"
        >
        <Spinner
            android:id="@+id/spinner_wilaya"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_corner"
            android:spinnerMode="dropdown"
            android:layout_marginRight="8dp"
            android:entries="@array/wilaya"/>

        <RadioGroup
            android:id="@+id/hopital_activity_radiobottongroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/public_hopital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publique"
                />
            <RadioButton
                android:id="@+id/private_hopital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrivÃ©"
                />
        </RadioGroup>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
</androidx.core.widget.NestedScrollView>
